{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean",
			"linux": {
				"command": "rm",
				"args": [
					"-rf",
					"src/out",
					"&>",
					"/dev/null"
				]
			},
			"windows": {
				"command": "Remove-Item",
				"args": [
					"src/out",
					"-ErrorAction",
					"SilentlyContinue",
					"-Force",
					"-Recurse",
				]
			},
			"problemMatcher": [],
			"type": "shell"
		},
		{
			"label": "Run",
			"linux": {
				"command": "python"
			},
			"osx": {
				"command": "python"
			},
			"windows": {
				"command": "py"
			},
			"args": [
				"src/run.py",
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"type": "shell"
		}
	]
}
